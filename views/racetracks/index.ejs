<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to TrackAttack!</h1>
            <p>View racetracks from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/racetracks/new">Add new racetrack</a></p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% racetracks.forEach(function(racetrack){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                    <img src="<%= racetrack.image %>" >
                    <div class="caption">
                            <h4><%= racetrack.name %></h4>
                    </div>
                    <p>
                        <a href="/racetracks/<%= racetrack._id %>" class="btn btn-primary">More Info</a>
                    </p>
            </div>
           
            
        </div>     
        <% }); %>
            
        </div>
    </div>

<% include ../partials/footer %>