<% include ../partials/header %>


<div class="container">
    <div class="row">
<h1 style="text-align: center;">Edit <%=racetrack.name%></h1>
<div style="width:30%; margin: 25px auto;">
    <form action="/racetracks/<%=racetrack._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="racetrack[name]" value="<%= racetrack.name %>">
        </div>
        <div class="form-group">
                <input class="form-control" type="number" name="racetrack[length]" min="0.01" step="0.01" value="<%=racetrack.length%>">
            </div>
        <div class="form-group">
            <input class="form-control" type="text" name="racetrack[image]" value="<%= racetrack.image %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="racetrack[description]" value="<%= racetrack.description %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
           
        </div>
        
    </form>
    <a href="/racetracks">Go back</a>
</div>
 
</div>
</div>

<% include ../partials/footer %>